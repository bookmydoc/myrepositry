<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fieldset name="basic">
			<field name="id" type="hidden" class="readonly" readonly="true"  label="JGLOBAL_FIELD_ID_LABEL"
			description="JGLOBAL_FIELD_ID_DESC" size="10" />
			
		<field name="name" type="text" label="COM_PRODUCTBUILDER_NAME_LABEL"
			class="inputbox" size="30"
			required="1" />

		<field name="published" type="radio"
			label="JSTATUS"
			class="inputbox" default="1" required="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>
	
				
		<field name="note" type="textarea" label="COM_PRODUCTBUILDER_NOTE_NAME_LABEL"
			description="COM_PRODUCTBUILDER_NOTE_DESC" class="inputbox" />
	</fieldset>
</form>
