<?xml version="1.0" encoding="UTF-8"?>
<form
	addrulepath="/administrator/components/com_smarticons/models/rules"
>
	<fieldset
		name="details"
	>
		<field
			name="idIcon"
			type="hidden" />
		<field
			name="asset_id"
			type="hidden" />
		<field
			name="Name"
			type="text"
			label="COM_SMARTICONS_ICON_FIELD_NAME_LABEL"
			description="COM_SMARTICONS_ICON_FIELD_NAME_DESC"
			size="40"
			class="inputbox"
			required="true"
			default=""
			onchange="$('icon_text').innerHTML = this.value;" />
		<field
			name="Title"
			type="text"
			label="COM_SMARTICONS_ICON_FIELD_TITLE_LABEL"
			description="COM_SMARTICONS_ICON_FIELD_TITLE_DESC"
			size="40"
			class="inputbox"
			default=""
			onchange="$('icon_url').title = this.value;" />
		<field
			name="Text"
			type="text"
			label="COM_SMARTICONS_ICON_FIELD_ALTTEXT_LABEL"
			description="COM_SMARTICONS_ICON_FIELD_ALTTEXT_DESC"
			size="40"
			class="inputbox"
			default=""
			onchange="$('icon_image').alt = this.value;" />
		<field
			name="Icon"
			type="activemedia"
			hide_none="1"
			class="inputbox"
			label="COM_SMARTICONS_ICON_FIELD_ICON_LABEL"
			size="40"
			description="COM_SMARTICONS_ICON_FIELD_ICON_DESC" />
		<field
			name="catid"
			type="category"
			extension="com_smarticons"
			label="JCATEGORY"
			description="COM_SMARTICONS_ICON_FIELD_CATEGORY_DESC"
			class="inputbox"
		>
			<option
				value="0"
			>JOPTION_SELECT_CATEGORY</option>
		</field>
		<field
			name="published"
			type="list"
			label="COM_SMARTICONS_ICON_FIELD_STATE"
			description="COM_SMARTICONS_ICON_FIELD_STATE_DESC"
			class="inputbox"
			size="1"
			default="1"
		>
			<option
				value="1"
			>JPUBLISHED</option>
			<option
				value="0"
			>JUNPUBLISHED</option>
		</field>
		<field
			name="Display"
			type="list"
			label="COM_SMARTICONS_ICON_FIELD_DISPLAY"
			description="COM_SMARTICONS_ICON_FIELD_DISPLAY_DESC"
			class="inputbox"
			size="1"
			default="1"
			onchange="setDisplay(this.value);"
		>
			<option
				value="1"
			>COM_SMARTICONS_ICON_FIELD_DISPLAY_ICONTEXT</option>
			<option
				value="2"
			>COM_SMARTICONS_ICON_FIELD_DISPLAY_ICON</option>
			<option
				value="3"
			>COM_SMARTICONS_ICON_FIELD_DISPLAY_TEXT</option>
		</field>
		<field
			name="Target"
			type="text"
			size="40"
			required="true"
			validate="target"
			label="COM_SMARTICONS_ICON_FIELD_TARGET"
			description="COM_SMARTICONS_ICON_FIELD_TARGET_DESC"
			class="inputbox validate-link"
			onchange="$('icon_url').href = this.value;" />
		<field
			name="COM_SMARTICONS_ICON_FIELD_BLANK"
			type="AdminMenuItem"
			width="40"
			onchange="$('jform_Target').value = this.value;$('icon_url').href = this.value;"
		>
			<option
				value=""
			>JOPTION_SELECT_MENU</option>
			<option
				value="http://"
			>COM_SMARTICONS_ICON_FIELDS_TARGET_EXTERNAL</option>
		</field>
	</fieldset>
	<fields
		name="params"
	>
		<fieldset
			name="params"
			label="JGLOBAL_FIELDSET_DISPLAY_OPTIONS"
		>
			<field
				name="accessCheck"
				type="checkbox"
				label="COM_SMARTICONS_ICON_FIELD_NO_ACCESS_CHECK_LABEL"
				description="COM_SMARTICONS_ICON_FIELD_NO_ACCESS_CHECK_DESC"
				value="1" />
			<field
				name="bold"
				type="checkbox"
				label="COM_SMARTICONS_ICON_FIELD_BOLD_LABEL"
				description="COM_SMARTICONS_ICON_FIELD_BOLD_DESC"
				value="1"
				onclick="$('icon_text').style.fontWeight = this.checked ? 'bold' : 'normal';" />
			<field
				name="italic"
				type="checkbox"
				label="COM_SMARTICONS_ICON_FIELD_ITALIC_LABEL"
				description="COM_SMARTICONS_ICON_FIELD_ITALIC_DESC"
				value="1"
				onclick="$('icon_text').style.fontStyle = this.checked ? 'italic' : 'normal';" />
			<field
				name="underline"
				type="checkbox"
				label="COM_SMARTICONS_ICON_FIELD_UNDERLINE_LABEL"
				description="COM_SMARTICONS_ICON_FIELD_UNDERLINE_DESC"
				value="1"
				onclick="$('icon_text').style.textDecoration = this.checked ? 'underline' : 'none';" />
			<field
				name="NewWindow"
				type="checkbox"
				label="COM_SMARTICONS_ICON_FIELD_NEWWINDOW_LABEL"
				description="COM_SMARTICONS_ICON_FIELD_NEWWINDOW_DESC"
				value="1" />
			<field
				name="width"
				type="text"
				label="COM_SMARTICONS_ICON_FIELD_WIDTH_LABEL"
				description="COM_SMARTICONS_ICON_FIELD_WIDTH_DESC"
				class="inputbox validate-numeric"
				onchange="$('icon_url').setStyle('width',this.value+'px');"/>
			<field
				name="height"
				type="text"
				label="COM_SMARTICONS_ICON_FIELD_HEIGHT_LABEL"
				description="COM_SMARTICONS_ICON_FIELD_HEIGHT_DESC"
				class="inputbox validate-numeric"
				onchange="$('icon_url').setStyle('height',this.value+'px');"/>
		</fieldset>
	</fields>
	<fields>
		<fieldset
			name="permissions"
			label="JCONFIG_PERMISSIONS_LABEL"
			description="JCONFIG_PERMISSIONS_DESC">
			<field
				id="rules"
				name="rules"
				type="rules"
				label="JFIELD_RULES_LABEL"
				translate_label="false"
				filter="rules"
				validate="rules"
				class="inputbox"
				component="com_smarticons"
				section="icon" />
		</fieldset>
	</fields>
</form>