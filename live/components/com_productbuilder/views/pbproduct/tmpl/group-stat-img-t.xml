<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="COM_PRODUCTBUILDER_PBPRODUCT_VIEW_TMPL_GROUPSTATICT_TITLE"
		option="COM_PRODUCTBUILDER_PBPRODUCT_VIEW_TMPL_GROUPSTATICt_TITLE">
		<message>
			<![CDATA[COM_PRODUCTBUILDER_LAYOUT_STATIC_TOP_DESC]]>
		</message>
	</layout>
	<!-- Add fields to the request variables for the layout. -->
	<fields name="request">
