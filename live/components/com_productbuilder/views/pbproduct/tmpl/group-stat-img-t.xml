				label="COM_PRODUCTBUILDER_CONFIG_DISPLAY_COMPATIBILITY_LABEL"
				description="COM_PRODUCTBUILDER_CONFIG_DISPLAY_COMPATIBILITY_DESC"
				class="inputbox" default="1">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>

			<field name="disp_price" type="radio"
				label="COM_PRODUCTBUILDER_CONFIG_DISPLAY_PRICE_LABEL" description="COM_PRODUCTBUILDER_CONFIG_DISPLAY_PRICE_DESC"
				class="inputbox" default="1">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>

			<field name="disp_pb_prod_descr" type="radio" default="0"
				label="COM_PRODUCTBUILDER_DISPLAY_CONF_DESCR_LABEL" description="COM_PRODUCTBUILDER_DISPLAY_CONF_DESCR_DESC">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>

			<field name="disp_pb_prod_img" type="radio" default="0"
				label="COM_PRODUCTBUILDER_DISPLAY_CONF_IMG_LABEL" description="COM_PRODUCTBUILDER_DISPLAY_CONF_IMG_DESC">
