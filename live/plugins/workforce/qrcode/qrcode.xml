<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="workforce" method="upgrade">
	<name>Workforce - Employee QR vCard / meCard</name>
	<author>The Thinkery</author>
	<creationDate>August 2012</creationDate>
	<copyright>Copyright (C) 2012 The Thinkery LLC. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>info@thethinkery.net</authorEmail>
	<authorUrl>www.thethinkery.net</authorUrl>
	<version>2.0.1</version>
	<description>Workforce Employee QR vCard / meCard</description>
	<files>
		<filename plugin="qrcode">qrcode.php</filename>
	</files>	
	<languages>
	   <language tag="en-GB">en-GB.plg_workforce_qrcode.ini</language>
	</languages>
	<config>
        <fields name="params">
            <fieldset name="basic">
                <field name="format" type="list" default="0" label="PLG_WF_QR_FORMAT" description="PLG_WF_QR_FORMAT_DESC">
                  <option value="0">vCard</option>
                  <option value="1">meCard</option>
                </field>
                <field name="size" type="integer" default="125" label="PLG_WF_QR_SIZE" description="PLG_WF_QR_SIZE_DESC" first="100" last="600" step="25" />
                <field name="show_overview" type="list" default="0" label="PLG_WF_QR_SHOW_OVERVIEW" description="PLG_WF_QR_SHOW_OVERVIEW_DESC">
                  <option value="0">JNO</option>
                  <option value="1">JYES</option>
                </field>
             </fieldset>
         </fields>
     </config>
</extension>